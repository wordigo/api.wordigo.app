{
  "ts-node": {
    "files": true
  },
  "include": [
    "/src/**/*.ts"
  ],
  "files": [
    "src/index.ts",
    "src/types/config.d.ts",
    "src/types/prisma.d.ts",
    "src/types/requests.d.ts"
  ],
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}